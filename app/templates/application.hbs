<script type="text/javascript">
function event(element, eventName) {
    return {
        forEach(observer) {
            element.addEventListener(eventName, observer)
            return {
                dispose() {
                    element.removeEventListener(eventName, observer)
                }
            }
        }
    }
}

var menu = document.querySelector('.menu')
var menuTrigger = document.querySelector('.menu-trigger')
var menuClose = document.querySelector('.action--menu-close')

var menuCloseClick = event(menuClose, 'click').forEach(function(e) {
    e.preventDefault()
    menu.classList.remove('js-open')
})
var menuTriggerClick = event(menuTrigger, 'click').forEach(function(e) {
    menu.classList.add('js-open')
});
</script>
